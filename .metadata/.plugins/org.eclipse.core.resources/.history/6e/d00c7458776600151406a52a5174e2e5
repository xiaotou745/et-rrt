@Controller
@RequestMapping("account2")
public class Account2Controller {

	@Autowired
	private IBusinessService businessService;	

	@RequestMapping("list")
	public ModelAndView list() {
		ModelAndView view = new ModelAndView("adminView");
		view.addObject("subtitle", "用户设置");
		view.addObject("currenttitle", "用户管理");
		view.addObject("viewPath", "account2/list");
		return view;
	}

	@RequestMapping("listdo")
	public ModelAndView list(PagedAccountInfoReq req) {
		PagedResponse<AccountInfo> resp = accountInfoService.queryAccount(req);
		ModelAndView view = new ModelAndView();
		view.addObject("viewPath", "account2/listdo");
		view.addObject("listData", resp);
		return view;
	}	
}
